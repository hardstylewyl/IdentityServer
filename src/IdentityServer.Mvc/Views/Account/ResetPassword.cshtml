@model ResetPasswordViewModel

<div class="fxt-content">
	<div class="fxt-form">
		<h2>Reset Password</h2>
		<a href="#" class="fxt-otp-logo">
			<img src="~/images/icon_对号.png" alt=""/>
		</a>
		<div class="fxt-sending-to">
			<span>请您修改您的密码!</span>
		</div>
		<form asp-controller="Account"
		      asp-action="ResetPassword"
		      method="post">
			<input asp-for="Code" type="hidden"/>
			<div class="form-group">
				<input asp-for="Email" class="form-control" placeholder="请输入您的邮箱" required/>
				<span asp-validation-for="Email" class="text-danger"></span>
			</div>
			<div class="form-group">
				<input asp-for="Password" class="form-control" placeholder="请输入密码" required/>
				<i toggle="#Password" class="fa fa-fw fa-eye toggle-password field-icon"></i>
				<span asp-validation-for="Password" class="text-danger"></span>
			</div>
			<div class="form-group">
				<input asp-for="ConfirmPassword" class="form-control" placeholder="请再次输入密码" required/>
				<i toggle="#ConfirmPassword" class="fa fa-fw fa-eye toggle-password field-icon"></i>
				<span asp-validation-for="ConfirmPassword" class="text-danger"></span>
			</div>
			<div class="form-group">
				<button type="submit" class="fxt-btn-fill">重置</button>
			</div>
		</form>
	</div>
	<div class="fxt-footer">
		<p class="fxt-resend-wrap">
			没有收到验证码?
			<button class="fxt-btn-resend" type="submit">重新发送验证码</button>
		</p>
	</div>
</div>
