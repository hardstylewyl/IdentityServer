<!DOCTYPE html>

<html lang="en">

<head>
	<meta charset="utf-8"/>
	<meta name="viewport" content="width=device-width, initial-scale=1.0"/>
	<title>@ViewData["Title"]</title>
	<environment include="Development">
		<link rel="stylesheet" href="~/lib/layui/css/layui.css">
		<link rel="stylesheet" href="~/lib/bootstrap/css/bootstrap.css"/>
		<!-- 目前只有密码的显示隐藏用到的 -->
		<link rel="stylesheet" href="~/lib/fontawesome/all.css" />
		<link rel="stylesheet" href="~/css/site.css"/>
	</environment>
	<environment exclude="Development">
		<link rel="stylesheet" href="~/lib/layui/css/layui.css">
		<link rel="stylesheet" href="~/lib/bootstrap/css/bootstrap.min.css"/>
		<!-- 目前只有密码的显示隐藏用到的 -->
		<link rel="stylesheet" href="~/lib/fontawesome/all.min.css" />
		<link rel="stylesheet" href="~/css/site.css"/>
	</environment>
</head>
<body>

<!-- 白屏转圈特效 START -->
<div id="preloader" class="preloader">
	<div class='inner'>
		<div class='line1'></div>
		<div class='line2'></div>
		<div class='line3'></div>
	</div>
</div>
<!-- 白屏转圈特效 END -->
<section class="fxt-template-animation fxt-template-layout22" data-bg-image="/images/bg_account.jpg">
	<!-- 雪花特效 START -->
	<div class="star-animation">
		<div id="stars1"></div>
		<div id="stars2"></div>
		<div id="stars3"></div>
		<div id="stars4"></div>
		<div id="stars5"></div>
	</div>
	<!-- 雪花特效 END -->
	<div class="container">
		<div class="row align-items-center">
			<div class="col-lg-6 col-12 fxt-none-991">
				<div class="fxt-header">
					<div class="fxt-transformY-50 fxt-transition-delay-1">
						<a href="#" class="fxt-logo">
							<img src="~/images/logo.svg" alt="Logo">
						</a>
					</div>
					<div class="fxt-transformY-50 fxt-transition-delay-3">
						<h1>IdentityServer</h1>
					</div>
					<div class="fxt-transformY-50 fxt-transition-delay-5">
						<p>这是一个统一的身份中心，在此注册的账号可以使用多种应用服务</p>
					</div>
					<div class="fxt-transformY-50 fxt-transition-delay-7">
						<p>支持OIDC SSO ExternalProviderLink</p>
					</div>
				</div>
			</div>
			<div class="col-lg-6 col-12 fxt-bg-color">
				@RenderBody()
			</div>

		</div>
	</div>
</section>


<environment include="Development">
	<script src="~/lib/jquery/jquery-3.7.1.js"></script>
	<script src="~/lib/layui/layui.js"></script>
	<script src="~/lib/bootstrap/js/bootstrap.bundle.js"></script>
	<script src="~/lib/imagesloaded/imagesloaded.pkgd.js"></script>
	<script src="~/js/site.js"></script>
</environment>
<environment exclude="Development">
	<script src="~/lib/jquery/jquery-3.7.1.min.js"></script>
	<script src="~/lib/layui/layui.js"></script>
	<script src="~/lib/bootstrap/js/bootstrap.bundle.min.js"></script>
	<script src="~/lib/imagesloaded/imagesloaded.pkgd.min.js"></script>
	<script src="~/js/site.js"></script>
</environment>
@* 提供一个占位符用于按需的渲染额外的脚本 *@
@await RenderSectionAsync("Scripts", required: false)
</body>
</html>
