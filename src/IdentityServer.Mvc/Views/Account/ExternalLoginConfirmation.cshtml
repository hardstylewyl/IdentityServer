@model ExternalLoginConfirmationViewModel

<div class="fxt-content">
	<div class="fxt-form">
		<h2>初始化账户</h2>
		<p class="text-info">
			您已成功通过<strong>@ViewData["ProviderDisplayName"]</strong>完成关联账户的创建
			还差最后一步了！填写信息完成即可注册成功！！
		</p>
		<form asp-controller="Account" 
		      asp-action="ExternalLoginConfirmation" 
		      asp-route-returnUrl="@ViewData["ReturnUrl"]"
		      method="post">
			<div asp-validation-summary="All" class="text-danger"></div>
			<div class="form-group">
				<input asp-for="Email" class="form-control" placeholder="邮箱" required/>
				<span asp-validation-for="Email" class="text-danger"></span>
			</div>
			<div class="form-group">
				<input asp-for="Password" class="form-control" placeholder="密码" required/>
				<span asp-validation-for="Password" class="text-danger"></span>
			</div>
			<div class="form-group">
				<input asp-for="ConfirmPassword" class="form-control" placeholder="确认密码" required/>
				<span asp-validation-for="ConfirmPassword" class="text-danger"></span>
			</div>
			<div class="form-group">
				<button type="submit" class="fxt-btn-fill">注册</button>
			</div>
		</form>
	</div>
</div>
